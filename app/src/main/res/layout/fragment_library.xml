<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moehandi.moktest.ui.library.LibraryFragment">

    <RelativeLayout
        android:id="@+id/layout_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            app:srcCompat="@drawable/ic_percent" />

        <TextView
            android:id="@+id/tv_title_discount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toRightOf="@id/img_discount"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_lbl_discounts"
            android:textAppearance="?attr/textAppearanceListItem" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toRightOf="@id/tv_title_discount"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp" />

        <TextView
            android:id="@+id/tv_title_items"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toRightOf="@id/img_items"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_lbl_all_items"
            android:textAppearance="?attr/textAppearanceListItem" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toRightOf="@id/tv_title_items"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

</LinearLayout>
